        <versification>kjv</versification>
    </meta>
    <data>
        <site>
            <url>http://biblehub.com/</url>
              <filterBySelector> 
                  .tablebk
                  iframe
              </filterBySelector>
              <blacklistUrl>
                  biblemenus.com
              </blacklistUrl>
            <parseInBook><![CDATA[
                (function(bookID, bookName) {
                    return "http://biblehub.com/interlinear/"+bookName+"/1.htm";
                 })
                ]]>
            </parseInBook>
            <parseInChapter><![CDATA[
                (function(bookID, bookName, chapter) { 
                    return "http://biblehub.com/interlinear/"+bookName+"/"+(chapter+1)+".htm";
                 })
                ]]>
            </parseInChapter>
            <parseInVerse><![CDATA[
                (function(bookID, bookName, chapter, verse) {
                    return "http://biblehub.com/interlinear/"+bookName+"/"+(chapter+1)+"-"+(verse+1)+".htm";
                 })
                ]]>
            </parseInVerse>
            <parseOut>
                <![CDATA[
                    (function(a) { 
                        a = a.toLowerCase();
                        var greek = "http://concordances.org/greek/"
                        var hebrew = "http://concordances.org/hebrew/"
                        var n = a.match(/(\d)+/g); 
                        if(a.indexOf(greek) == 0) {
                            return "strong:/G" + n;
                        } else if(a.indexOf(hebrew) == 0) {
                            return "strong:/H" + n;
                        } else {
                            return a;
                        }
                        
                    })
                 ]]>
            </parseOut>
            
